<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text.RankStyle" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:fontFamily">@font/im_hyemin_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.TitleStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:fontFamily">@font/im_hyemin_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    //연월 설정
    <style name="CalenderViewCustom" parent="Theme.AppCompat.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColorPrimary">#a020f0</item> //글자색
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item> //누르는 색
        <item name="android:fontFamily">@font/im_hyemin_bold</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:fontFamily">@font/im_hyemin_regular</item>
    </style>

    <style name="CalenderViewWeeksTextStyle" parent="android:TextAppearance.DeviceDefault">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#3D3D3D</item>
        <item name="android:fontFamily">@font/im_hyemin_bold</item>
    </style>

</resources>